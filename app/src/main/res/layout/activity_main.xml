<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/black"
        android:padding="10dp"
        android:textSize="60sp"
        android:scrollbars="vertical"
        android:gravity="end|bottom"/>

    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:hint="0"
        android:gravity="end|bottom"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/black"
        android:columnCount="4"
        android:rowCount="6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnResult"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="resultClick"
            android:text="계산결과"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:onClick="DeleteClick"
            android:text="⬅"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnAC"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="AllClear"
            android:text="AC"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnBracket"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="bracket"
            android:text="()"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="percent"
            android:text="%"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnDevide"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="devide"
            android:text="÷"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum7"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="7"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum8"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="8"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum9"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="9"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnMulti"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="Mulitply"
            android:text="x"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum4"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="4"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum5"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="5"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum6"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="6"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="minus"
            android:text="-"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="1"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum2"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="2"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum3"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="numClick"
            android:text="3"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnPLus"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="plus"
            android:text="+"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnNum0"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:onClick="numClick"
            android:text="0"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="dot"
            android:text="."
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:onClick="equal"
            android:text="="
            android:textSize="16dp"/>


    </GridLayout>

</LinearLayout>