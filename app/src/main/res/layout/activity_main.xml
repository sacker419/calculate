<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/black"
        android:padding="10dp"
        android:textSize="60sp"
        android:scrollbars="vertical"
        android:hint="0"
        android:textColorHint="@color/lightgray"
        android:textColor="@color/lightgray"
        android:gravity="end|top"/>

    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="end|bottom"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/black"
        android:columnCount="4"
        android:rowCount="6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnResult"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="resultClick"
            android:background="@drawable/shape_circle_button_lightgray"
            android:text="계산기록"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="DeleteClick"
            android:background="@drawable/shape_circle_button_orange"
            android:text="⬅"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="AllClear"
            android:background="@drawable/shape_circle_button_lightgray"
            android:text="AC"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btnBracketOpen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="bracketOpen"
            android:background="@drawable/shape_circle_button_lightgray"
            android:text="("
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btnBracketClose"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="bracketClose"
            android:background="@drawable/shape_circle_button_lightgray"
            android:text=")"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btnDevide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="devide"
            android:background="@drawable/shape_circle_button_orange"
            android:text="÷"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="7"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="8"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="9"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnMulti"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="Mulitply"
            android:background="@drawable/shape_circle_button_orange"
            android:text="x"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="4"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="5"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnNum6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="6"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
        android:id="@+id/btnMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="minus"
        android:background="@drawable/shape_circle_button_orange"
        android:text="-"
        android:textSize="35sp"
        android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="1"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="2"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="3"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnPLus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="plus"
            android:background="@drawable/shape_circle_button_orange"
            android:text="+"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNum0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:onClick="numClick"
            android:background="@drawable/shape_circle_button"
            android:text="     0"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="dot"
            android:background="@drawable/shape_circle_button"
            android:text="."
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="equal"
            android:background="@drawable/shape_circle_button_orange"
            android:text="="
            android:textSize="25sp"
            android:textColor="@color/white"/>


    </GridLayout>

</LinearLayout>